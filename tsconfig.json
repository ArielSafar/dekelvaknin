{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "outDir": "./dist"
  }
}